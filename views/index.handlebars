<body>
    <header class="m-5 text-center">
        <h1>Burger Devourer!</h1>
    </header>
    <div class="container">
        <div class="img-holder mb-3">
            <img class="main-img" src="/assets/img/burgerImg.png" alt="juicy burger">
        </div>
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center mb-3">Available Burgers</h2>
                <ul class="list-group">
                    {{#each burgerData}}
                        {{#unless devoured}}
                            <li class="list-group-item">{{burger_name}}<button class="btn btn-primary ml-5 eat-btn" data-id="{{id}}">Devour</button></li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6">
                <h2 class="mb-3 text-center">Devoured Burgers</h2>
                <ul class="list-group">
                    {{#each burgerData}}
                        {{#if devoured}}
                            <li class="list-group-item">{{burger_name}}</li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <section class="mt-5 text-center">
                <h2>Add a Burger</h2>
                <form  id="new-burger-form" class="mt-3 mb-3">
                    <div class="form-group">
                        <label for="burger-name">Burger Name:</label> <br>
                        <textarea name="burger-name" id="burger-name" cols="30" rows="4"></textarea>
                    </div>
                      <button type="submit" class="btn btn-primary">Add a Burger</button>
                </form>
            </section>
        </div>
</body>